{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "lib": ["ES2020", "dom"],

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "include": [
    "build.js",
    "scratch/**/*.js",
    "lambdas/**/*.js",
    "cli/**/*.js",
    "bin/wharfie",
    "test/lib/dynamo/operation.test.js",
    "test/lib/dynamo/operation-mock.test.js"
  ],
  "exclude": ["lambdas/udf_entrypoint.js"]
}
