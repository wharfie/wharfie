{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2021",
    "lib": ["ES2021", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": [
    "lambdas/**/*.js",
    "test/cli/**/*.js",
    "test/runtime/**/*.js",
    "test/graph/**/*.js",
    "test/db/**/*.js",
    "test/fixtures/actors/**/*.js"
  ],
  "exclude": [
    "lambdas/udf_entrypoint.js",
    "lambdas/lib/actor/resources/aws/**",
    "lambdas/lib/actor/resources/records/**",
    "test/legacy/**"
  ]
}
