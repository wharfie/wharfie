{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2021",
    "lib": [
      "ES2021",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "lambdas/lib/actor/runtime/**/*.js",
    "lambdas/lib/actor/resources/builds/**/*.js",
    "lambdas/lib/code-execution/**/*.js",
    "lambdas/lib/paths.js",
    "lambdas/lib/typedefs.js",
    "test/actor/runtime/**/*.test.js",
    "test/fixtures/actors/**/*.js"
  ],
  "exclude": [
    "lambdas/udf_entrypoint.js",
    "lambdas/lib/actor/resources/aws/**",
    "lambdas/lib/actor/resources/records/**",
    "test/actor/aws/**",
    "test/actor/records/**"
  ]
}
