{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es2019",
      "es2020.promise",
      "es2020.bigint",
      "es2020.string",
      "dom"
    ],
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": [
    "lambdas/**/*.js",
    "cli/**/*.js",
    "bin/wharfie",
    "test/lib/dynamo/operation.test.js",
    "test/lib/dynamo/operation-mock.test.js"
    // "test/**/*.js"
  ],
  "exclude": ["lambdas/udf_entrypoint.js"]
}
