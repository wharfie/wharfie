                  "Resource": [
                    {
                      "Fn::Join": [
                        "",
                        [
                          "arn:",
                          { "Ref": "AWS::Partition" },
                          ":s3:::",
                          {
                            "Fn::Select": [
                              "0",
                              { "Fn::Split": ["/", "amazon-berkeley-objects/"] }
                            ]
                          }
                        ]
                      ]
                    },
                    {
                      "Fn::Join": [
                        "",
                        [
                          "arn:",
                          { "Ref": "AWS::Partition" },
                          ":s3:::",
                          {
                            "Fn::Select": [
                              "0",
                              {
                                "Fn::Split": [
                                  "/",
                                  { "Fn::Sub": "${ExamplesBucket}/" }
                                ]
                              }
                            ]
                          }
                        ]
                      ]
                    },
                    {
                      "Fn::Join": [
                        "",
                        [
                          "arn:",
                          { "Ref": "AWS::Partition" },
                          ":s3:::",
                          {
                            "Fn::Select": [
                              "0",
                              {
                                "Fn::Split": [
                                  "/",
                                  { "Fn::Sub": "${ExamplesBucket}/" }
                                ]
                              }
                            ]
                          }
                        ]
                      ]
                    }
                  ]
                },
                {
                  "Sid": "OutputWrite",
                  "Effect": "Allow",
                  "Action": ["s3:*"],
                  "Resource": [
                    {
                      "Fn::Join": [
                        "",
                        [
                          "arn:",
                          { "Ref": "AWS::Partition" },
                          ":s3:::",
                          { "Fn::Sub": "${ExamplesBucket}/" },
                          "*"
                        ]
                      ]
                    }
                  ]
                },
                {
                  "Sid": "InputRead",
                  "Effect": "Allow",
                  "Action": ["s3:GetObject"],
                  "Resource": [
                    {
                      "Fn::Join": [
                        "",
                        [
                          "arn:",
                          { "Ref": "AWS::Partition" },
                          ":s3:::",
                          "amazon-berkeley-objects/",
                          "*"
                        ]
                      ]
                    },
                    {
                      "Fn::Join": [
                        "",
                        [
                          "arn:",
                          { "Ref": "AWS::Partition" },
                          ":s3:::",
                          { "Fn::Sub": "${ExamplesBucket}/" },
                          "*"
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      }
    },
